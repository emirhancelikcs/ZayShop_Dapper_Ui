@model CreateProductDto

@{
    ViewData["Title"] = "Create Product";
    Layout = "_AdminLayout";
}

<h1>Create Product</h1>

<form method="post" enctype="multipart/form-data">
	<label>Product Name</label>
	<input type="text" asp-for="ProductName" class="form-control">
	<br>
	<label>Product Price</label>
	<input type="text" asp-for="ProductPrice" class="form-control">
	<br>
	<label>Product Brand</label>
	<input type="text" asp-for="ProductBrand" class="form-control">
	<br>
	<label>Product Category Name</label>
	@* @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new {@class="form-control"}) *@
	<select asp-for="ProductCategory">
		@if (ViewBag.V != null)
		{
			@foreach (var item in ViewBag.v)
			{
				<option value="@item.Value">@item.Text</option>
			}
		}
	</select>
	<br>
	<label>Product Description</label>
	<textarea type="text" asp-for="ProductDescription" class="form-control" rows="5"></textarea>
	<br>
	<label>Product ImageUrl</label>
	<input type="file" name="formFile" class="form-control">
	<br>
	<button class="btn btn-primary">Save the Product</button>
</form>
