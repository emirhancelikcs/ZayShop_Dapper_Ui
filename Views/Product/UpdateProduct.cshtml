@model UpdateProductDto

@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Update Product";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
	<input type="hidden" asp-for="ProductId">
	<label>Product Name</label>
	<input type="text" asp-for="ProductName" class="form-control">
	<br>
	<label>Product Price</label>
	<input type="text" asp-for="ProductPrice" class="form-control">
	<br>
	<label>Product Brand</label>
	<input type="text" asp-for="ProductBrand" class="form-control">
	<br>
	<label>Product Image Url</label>
	<input type="text" asp-for="ProductImageUrl" class="form-control">
	<br>
	<label>Product Category</label>
	<select asp-for="ProductCategory">
		@foreach (var item in ViewBag.v)
		{
			<option value="@item.Value">@item.Text</option>
		}
	</select>
	<br>
	<label>Product Description</label>
	<textarea type="text" asp-for="ProductDescription" class="form-control" cols="5"></textarea>
	<br>
	<button class="btn btn-primary">Update Category</button>
</form>
